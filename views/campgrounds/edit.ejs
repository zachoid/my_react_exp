<%- include('../partials/header') %>
    <h1>
        Edit Details of
        <%= campground.name %>
    </h1>

    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div style="width: 30%; margin-top: 25px auto;">

            <div class="form-group">
                <input class="form-control" type="text" name="compound[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="compound[image]" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="compound[description]" value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="compound[price]" value="<%= campground.price %>">
            </div>
            <div class="form-group">
                <input type="text" name="compound[quantity]" class="form-control" value="<%= campground.quantity %> ">
            </div>
            <div class="form-group">
                <input type="text" name="compound[phonenumber]" class="form-control" value="<%= campground.phonenumber %> ">
            </div>
            <div class="form-group">
                <input type="text" name="compound[emailaddress]" class="form-control" value="<%= campground.emailaddress %> ">
            </div>
            <button class="btn btn-success">submit</button>

        </div>

    </form>

    <%- include('../partials/footer') %>
